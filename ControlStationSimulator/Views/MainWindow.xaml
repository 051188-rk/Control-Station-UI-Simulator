<Window x:Class="ControlStationSimulator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Station UI Simulator" 
        Height="700" Width="1200"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern card style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3E3E42"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Label style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Dashboard -->
        <StackPanel Grid.Column="0">
            <!-- Title -->
            <TextBlock Text="DASHBOARD" FontSize="20" FontWeight="Bold" 
                      Foreground="#0E639C" Margin="10,0,0,20"/>

            <!-- Telemetry Cards -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TEMPERATURE" FontSize="12" Foreground="#888888" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Temperature, StringFormat={}{0:F1}}" 
                                  FontSize="36" FontWeight="Bold" Foreground="#0E639C"/>
                        <TextBlock Text="°C" FontSize="20" Margin="5,10,0,0" Foreground="#CCCCCC"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="PRESSURE" FontSize="12" Foreground="#888888" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Pressure, StringFormat={}{0:F2}}" 
                                  FontSize="36" FontWeight="Bold" Foreground="#0E639C"/>
                        <TextBlock Text="bar" FontSize="20" Margin="5,10,0,0" Foreground="#CCCCCC"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="POWER OUTPUT" FontSize="12" Foreground="#888888" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PowerOutput, StringFormat={}{0:F1}}" 
                                  FontSize="36" FontWeight="Bold" Foreground="#0E639C"/>
                        <TextBlock Text="MW" FontSize="20" Margin="5,10,0,0" Foreground="#CCCCCC"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- System State -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SYSTEM STATE" FontSize="12" Foreground="#888888" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="20" Height="20" Fill="{Binding StateColor}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding StateDisplayText}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="CONTROLS" FontSize="12" Foreground="#888888" Margin="0,0,0,10"/>
                    <Button Content="START SYSTEM" 
                           Command="{Binding StartCommand}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,5"/>
                    <Button Content="STOP SYSTEM" 
                           Command="{Binding StopCommand}"
                           Style="{StaticResource ModernButton}"
                           Background="#D13438"
                           Margin="0,5"/>
                    <Button Content="RESET FAULT" 
                           Command="{Binding ResetCommand}"
                           Style="{StaticResource ModernButton}"
                           Background="#FF8C00"
                           Margin="0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Middle Column: Configuration -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="CONFIGURATION" FontSize="20" FontWeight="Bold" 
                      Foreground="#0E639C" Margin="10,0,0,20"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="THRESHOLD SETPOINTS" FontSize="14" FontWeight="SemiBold" 
                              Margin="0,0,0,15"/>

                    <!-- Max Temperature -->
                    <Label Content="Maximum Temperature (°C):" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding MaxTemperature, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- Max Pressure -->
                    <Label Content="Maximum Pressure (bar):" Margin="0,20,0,5"/>
                    <TextBox Text="{Binding MaxPressure, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource ModernTextBox}"/>

                    <!-- Apply Button -->
                    <Button Content="APPLY CONFIGURATION" 
                           Command="{Binding ApplyConfigCommand}"
                           Style="{StaticResource ModernButton}"
                           Background="#16825D"
                           Margin="0,30,0,0"/>
                </StackPanel>
            </Border>

            <!-- Information Panel -->
            <Border Style="{StaticResource CardStyle}" Margin="10,20,10,10">
                <StackPanel>
                    <TextBlock Text="SYSTEM INFORMATION" FontSize="14" FontWeight="SemiBold" 
                              Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Status: " Foreground="#888888" Width="100"/>
                        <TextBlock Text="{Binding StateDisplayText}" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Temp Limit: " Foreground="#888888" Width="100"/>
                        <TextBlock Text="{Binding MaxTemperature, StringFormat={}{0:F1}°C}" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Press Limit: " Foreground="#888888" Width="100"/>
                        <TextBlock Text="{Binding MaxPressure, StringFormat={}{0:F2} bar}" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Separator Background="#3E3E42" Margin="0,15"/>
                    
                    <TextBlock Text="The control engine monitors telemetry and automatically enters FAULT state when thresholds are exceeded." 
                              FontSize="11" Foreground="#888888" TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Right Column: Alerts -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="ALERTS" FontSize="20" FontWeight="Bold" 
                      Foreground="#0E639C" Margin="10,0,0,20"/>

            <Border Style="{StaticResource CardStyle}" Height="600">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Alerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="10,15">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" 
                                                      FontSize="10" Foreground="#888888" Margin="0,0,10,0"/>
                                            <Border Padding="6,2" CornerRadius="3" Margin="0,0,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Severity}" Value="INFO">
                                                                <Setter Property="Background" Value="#0E639C"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Severity}" Value="WARNING">
                                                                <Setter Property="Background" Value="#FF8C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Severity}" Value="CRITICAL">
                                                                <Setter Property="Background" Value="#D13438"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Severity}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="12" Foreground="#CCCCCC"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>
</Window>
