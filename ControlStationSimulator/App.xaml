<Application x:Class="ControlStationSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- Global application resources -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0E639C"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBackgroundColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>
        
        <!-- Global font family -->
        <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    </Application.Resources>
</Application>
